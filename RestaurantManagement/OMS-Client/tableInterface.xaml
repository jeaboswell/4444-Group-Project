                                <Button x:Name="mahjongBtn" Content="Mahjong" Margin="10" Grid.Row="4" Grid.ColumnSpan="2" Click="mahjongBtn_Click" Grid.Column="1" Background="#FF2D2D30" BorderBrush="#FF2D2D30" Foreground="#FFACACAC"/>
                                <Button x:Name="flappyBtn" Content="Flappy Beak" Margin="10" Grid.Row="4" Grid.ColumnSpan="2" Click="flappyBtn_Click" Grid.Column="3" Background="#FF2D2D30" BorderBrush="#FF2D2D30" Foreground="#FFACACAC"/>
                                <Button x:Name="spadesBtn" Content="Spades" Grid.Column="3" Margin="10" Grid.Row="2" Grid.ColumnSpan="2" Click="spadesBtn_Click" Foreground="#FFACACAC" Background="#FF2D2D30" BorderBrush="#FF2D2D30"/>
                                <Button x:Name="blackjackBtn" Content="Blackjack" Grid.Column="3" Margin="10" Grid.Row="3" RenderTransformOrigin="-0.453,0.125" Grid.ColumnSpan="2" Click="blackjackBtn_Click" Foreground="#FFACACAC" BorderBrush="#FF2D2D30" Background="#FF2D2D30"/>
                                <Label x:Name="label7" Content="Play for Fun!" Grid.Column="1" Margin="10" Grid.Row="1" Grid.ColumnSpan="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                <Grid Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="201,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>

                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="card1" Content="1" Margin="10" Grid.Row="2" Grid.RowSpan="3" Click="determineWin" Foreground="#FFACACAC" BorderBrush="#FF2D2D30" Background="#FF2D2D30"/>
                                <Button x:Name="card2" Content="2" Margin="10" Grid.Column="1" Grid.Row="2" Grid.RowSpan="3" Click="determineWin" Foreground="#FFACACAC" Background="#FF2D2D30" BorderBrush="#FF2D2D30"/>
                                <Button x:Name="card3" Content="3" Margin="10" Grid.Column="2" Grid.Row="2" Grid.RowSpan="3" Click="determineWin" Foreground="#FFACACAC" BorderBrush="#FF2D2D30" Background="#FF2D2D30"/>
                                <Button x:Name="card4" Content="4" Margin="10" Grid.Column="3" Grid.Row="2" Grid.RowSpan="3" Click="determineWin" Foreground="#FFACACAC" Background="#FF2D2D30" BorderBrush="#FF2D2D30"/>
                                <Button x:Name="card5" Content="5" Margin="10" Grid.Column="4" Grid.Row="2" Grid.RowSpan="3" Click="determineWin" Foreground="#FFACACAC" BorderBrush="#FF2D2D30" Background="#FF2D2D30"/>
                                <Label x:Name="label12" Content="Select the winning number!" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="3" Width="740" Height="94" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF2D2D30"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="eClub" FontSize="53.333" Width="220" Foreground="#FFACACAC" FontFamily="Baskerville Old Face">
